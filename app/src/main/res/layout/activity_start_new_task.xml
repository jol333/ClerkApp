<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dbapp.ashworth.clerkapp.StartNewTaskActivity">

    <include layout="@layout/app_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <!-- <ImageView
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:src="@drawable/ic_mic_black_24dp"
            android:tint="@color/dbx_primary" /> -->

        <EditText
            android:id="@+id/task_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="50dp"
            android:hint="Property Name"
            android:inputType="textCapWords"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/silver" />

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif-light"
            android:textAlignment="center"
            android:textColor="@color/dbx_primary"
            android:textSize="96dp"
            android:textStyle="normal"
            android:visibility="gone" />

        <Button
            android:id="@+id/next_button_1"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:clickable="false"
            android:enabled="false"
            android:text="Next" />


        <Button
            android:id="@+id/record_button"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_above="@id/next_button_1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:drawableTint="@android:color/white"
            android:drawableTop="@drawable/ic_mic_black_24dp"
            android:paddingTop="20dp"
            android:text="Record" />

        <Button
            android:id="@+id/resume_button"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_above="@id/next_button_1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:drawableTint="@android:color/white"
            android:drawableTop="@drawable/ic_mic_black_24dp"
            android:paddingTop="20dp"
            android:text="Resume"
            android:visibility="gone" />

        <Button
            android:id="@+id/stop_button"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_above="@id/next_button_1"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginEnd="50dp"
            android:drawableTint="@android:color/white"
            android:drawableTop="@drawable/ic_stop_black_24dp"
            android:paddingTop="20dp"
            android:text="Stop"
            android:visibility="gone" />

        <Button
            android:id="@+id/pause_button"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_above="@id/next_button_1"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginStart="50dp"
            android:drawableTint="@android:color/white"
            android:drawableTop="@drawable/ic_pause_white_24dp"
            android:paddingTop="20dp"
            android:text="Pause"
            android:visibility="gone" />

        <Button
            android:id="@+id/play_button"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_above="@+id/next_button_1"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginStart="50dp"
            android:drawableTint="@android:color/white"
            android:drawableTop="@drawable/ic_play_arrow_black_24dp"
            android:paddingTop="20dp"
            android:text="Play"
            android:visibility="gone" />

        <Button
            android:id="@+id/retry_button"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_above="@id/next_button_1"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginEnd="50dp"
            android:drawableTint="@android:color/white"
            android:drawableTop="@drawable/ic_refresh_black_24dp"
            android:paddingTop="20dp"
            android:text="Retry"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>
